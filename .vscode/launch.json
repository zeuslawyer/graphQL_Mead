    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug file",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch index.js debug",
            "program": "${workspaceFolder}/Mutations&Subscriptions/src/index.js" 
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch app.js debug",
            "program": "${workspaceFolder}/debug/app.js",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach node || nodemon process",
            "processId": "${command:PickProcess}",
            "port": 5858,
            "restart": true
        }
    ]
}